<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <ImageView
       android:id="@+id/iv_top"
       android:layout_width="match_parent"
       android:layout_height="@dimen/size200"
       android:scaleType="centerCrop"
       android:src="@mipmap/ic_launcher"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/size50"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/size8"
            android:src="@mipmap/icon_back_white" />
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_toRightOf="@id/iv_back"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/size8"
            android:src="@mipmap/game_icon_share" />

    </RelativeLayout>
    
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/size80"
        android:layout_height="@dimen/size80"
        android:layout_below="@id/iv_top"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="@dimen/size15"
        android:src="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_top"
        android:background="@color/white"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginTop="@dimen/size8"
        android:layout_marginStart="@dimen/size12"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2A2A28"
            android:textSize="@dimen/size18"
            android:text="机械师：创世纪元"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size12"
            android:textColor="#999999"
            android:text="沙漠幻想风格的策略游戏。上来就是干"
            />
    </LinearLayout>
</RelativeLayout>
