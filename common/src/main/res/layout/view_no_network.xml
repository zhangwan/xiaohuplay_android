<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_network_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size16"
        android:padding="@dimen/size16"
        android:src="@mipmap/icon_back"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_no_network" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/size15"
            android:text="网络连接失败"
            android:textColor="@color/gray28"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/size10"
            android:text="请检查您的网络设置或重新加载"
            android:textColor="@color/gray99"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/no_network_view_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size40"
            android:layout_margin="@dimen/size25"
            android:background="@drawable/stroke_rectangle_20_ffcc03"
            android:gravity="center"
            android:text="重新加载"
            android:textColor="@color/color_ffcc03"
            android:textSize="@dimen/textSize14" />

    </LinearLayout>
</RelativeLayout>