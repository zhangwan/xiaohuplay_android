<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/color_ffcc03</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>


    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splace</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/color_ffcc03</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="ThemeSlideBack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/color_ffcc03</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="rb_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>



    <style name="EditTextBase">
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray28</item>
        <item name="android:textColorHint">@color/gray99</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="EditTextPassword" parent="EditTextBase">
        <item name="android:digits">@string/digits_1</item>
        <item name="android:maxLength">16</item>
        <item name="android:inputType">textPassword</item>
    </style>


    <style name="MainButtonType">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_button_color</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/main_button_selector</item>
    </style>

    <style name="LoginButtonType">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray28</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/login_btn_selector</item>
    </style>

    <style name="TextviewType">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textview_color</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/textview_selector</item>
    </style>


    <style name="ThemeVideo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="BaseDialog" parent="android:Theme.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>


    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_scl</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
    </style>


    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:actionBarSize">46dp</item>
        <item name="android:homeAsUpIndicator">@mipmap/icon_back</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="RadingStyle" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/appraise_rating_bar</item>
        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:minHeight">11dp</item>
        <item name="android:maxHeight">11dp</item>
    </style>

    <style name="RadingStyle_16" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/appraise_rating_bar_16</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
</resources>
