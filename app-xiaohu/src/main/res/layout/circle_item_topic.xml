<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/size35"
    android:paddingLeft="@dimen/size15">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size20"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/size8"
        android:gravity="center"
        android:paddingRight="@dimen/size8"
        android:background="@drawable/stroke_rectangle_5_d7ab00"
        android:text="@string/app_name"
        android:textColor="@color/color_d7ab00"
        android:textSize="@dimen/textSize12" />


    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvName"
        android:layout_marginLeft="-16dp"
        android:paddingLeft="@dimen/size15"
        android:paddingRight="@dimen/size3"
        android:paddingBottom="@dimen/size10"
        android:src="@mipmap/icon_close1"
        />

</RelativeLayout>