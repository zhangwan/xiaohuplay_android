<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size260"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_rectangle_15_88000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/size260"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/size80"
        android:orientation="vertical"
        android:padding="@dimen/size15">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:paddingLeft="@dimen/size15"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingRight="@dimen/size15">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/size80"
            android:layout_height="@dimen/size35"
            android:background="@drawable/stroke_rectangle_20_ffcc03"
            android:gravity="center"
            android:text="@string/cancel"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14" />
        <View
            android:id="@+id/vView"
            android:layout_width="0dp"
            android:layout_height="@dimen/line"
            android:visibility="gone"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="@dimen/size80"
            android:layout_height="@dimen/size35"
            android:layout_alignParentRight="true"
            android:background="@drawable/solid_rectangle_20_ffcc03"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/gray33"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>
</LinearLayout>

