<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/grayF9"
    android:layout_height="@dimen/size40">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/size20"
        android:textColor="@color/gray28"
        android:textSize="@dimen/textSize14" />


    <ImageView
        android:id="@+id/tvAdvance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/size15"
        android:paddingLeft="@dimen/size25"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_right_g" />
</RelativeLayout>