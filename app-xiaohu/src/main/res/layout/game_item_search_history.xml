<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_margin="@dimen/size4"
    android:paddingStart="@dimen/size12"
    android:paddingEnd="@dimen/size12"
    android:background="@drawable/solid_rectangle_16_f5f3fc"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size30"

        android:text="沙雕欢乐"
        android:gravity="center"
        android:textColor="#D7AB00"
        android:textSize="@dimen/textSize14"
        android:padding="@dimen/size2"

        />
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| ×"
android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/gray99"
        android:textSize="@dimen/textSize14"
        android:padding="@dimen/size2"
        android:background="@drawable/solid_rectangle_16_f5f3fc"
        />

</LinearLayout>