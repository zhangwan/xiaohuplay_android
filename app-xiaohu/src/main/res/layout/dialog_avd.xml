<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size300"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivAvd"
        android:layout_width="@dimen/size300"
        android:layout_height="@dimen/size350"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:riv_border_width="0dip"
        app:riv_corner_radius="@dimen/size25"
        app:riv_oval="false" />


    <TextView
        android:id="@+id/tvOpen"
        android:layout_width="@dimen/size200"
        android:layout_height="@dimen/size40"
        android:layout_above="@+id/ivClos"
        android:layout_marginBottom="@dimen/size20"
        android:layout_centerHorizontal="true"
        android:background="@drawable/solid_rectangle_20_ffcc03"
        android:text="打开"
        android:textColor="@color/gray33"
        android:gravity="center"
        android:textSize="@dimen/textSize16"
        />

    <ImageView
        android:id="@+id/ivClos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivAvd"
        android:padding="@dimen/size20"
        android:src="@mipmap/icon_delete_avd" />

</RelativeLayout>

