<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size70"
        android:layout_marginTop="200dp"
        android:background="@drawable/solid_rectangle_30_ffffff_right"
        android:paddingStart="@dimen/size110"
        android:paddingTop="@dimen/size10"
        android:textColor="@color/gray33"
        android:textSize="@dimen/textSize18"
        android:textStyle="bold" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/size80"
        android:layout_height="@dimen/size80"
        android:layout_marginStart="@dimen/size15"
        android:layout_marginTop="175dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/size12"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/tvCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/size220"
        android:padding="@dimen/size15"
        android:text="查看圈子 >"
        android:textColor="@color/color_ffcc03"
        android:textSize="@dimen/textSize14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:background="@color/white"
        android:paddingLeft="@dimen/size15"
        android:paddingRight="@dimen/size15" />

</RelativeLayout>