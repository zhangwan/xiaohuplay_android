<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size210"
        android:src="@mipmap/icon_no_network" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/size15"
        android:text="网络连接失败"
        android:textColor="@color/gray28"
        android:textSize="@dimen/textSize14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/size10"
        android:paddingBottom="@dimen/size20"
        android:text="请检查您的网络设置或重新加载"
        android:textColor="@color/gray99"
        android:textSize="@dimen/textSize12" />


    <TextView
        android:id="@+id/no_network_view_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_margin="@dimen/size25"
        android:background="@drawable/stroke_rectangle_20_ffcc03"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="@color/color_ffcc03"
        android:textSize="@dimen/textSize14" />
</LinearLayout>