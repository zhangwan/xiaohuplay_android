<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size7"
    android:layout_marginRight="@dimen/size7"
    android:paddingTop="@dimen/size10">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size95"
        android:scaleType="centerCrop"
        app:riv_corner_radius="5dp"
        app:riv_oval="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size30"
        android:layout_marginTop="@dimen/size65"
        android:background="@drawable/solid_gradient_5_151515_000000" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogo"
        android:ellipsize="end"
        android:lines="1"
        android:paddingTop="@dimen/size5"
        android:paddingBottom="@dimen/size5"
        android:textColor="@color/gray33"
        android:textSize="@dimen/textSize16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size70"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="@dimen/size7"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize12" />

</RelativeLayout>