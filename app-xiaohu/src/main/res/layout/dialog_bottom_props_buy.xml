<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/iv_bottom"
        android:layout_gravity="bottom"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_rectangle_38ffa600"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size20">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/size10"
                android:src="@mipmap/icon_close" />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/size110"
                android:layout_height="@dimen/size110"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size8"
                android:textColor="@color/gray33"
                android:textSize="@dimen/textSize18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size4"
                android:textColor="@color/color_ffcc03"
                android:textSize="@dimen/textSize16" />

            <LinearLayout
                android:id="@+id/ll_num"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/size8"
                android:layout_marginEnd="@dimen/size8"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/size8"
                    android:text="购买数量"
                    android:textColor="@color/gray33"
                    android:textSize="@dimen/textSize16"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_sub"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_margin="@dimen/size4"
                    android:background="@drawable/solid_rectangle_e9e8e8"
                    android:gravity="center"
                    android:text="—"
                    android:textColor="@color/gray33"
                    android:textSize="@dimen/textSize16"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/et_num"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_margin="@dimen/size4"
                    android:background="@drawable/solid_rectangle_e9e8e8"
                    android:gravity="center"
                    android:text="1"
                    android:inputType="number"
                    android:paddingStart="@dimen/size10"
                    android:paddingEnd="@dimen/size10"
                    android:textColor="@color/gray33"
                    android:textSize="@dimen/textSize16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_margin="@dimen/size4"
                    android:background="@drawable/solid_rectangle_e9e8e8"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/gray33"
                    android:textSize="@dimen/textSize16"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_total"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/size8"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/size8"
                    android:text="合计"
                    android:textColor="@color/gray33"
                    android:textSize="@dimen/textSize16"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size4"
                    android:text="3333"
                    android:textColor="@color/color_ffcc03"
                    android:textSize="@dimen/textSize16"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="@dimen/size16"
            android:layout_marginBottom="@dimen/size40"
            android:background="@drawable/main_button_selector"
            android:text="立即购买"
            android:textColor="@color/main_button_color"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>