<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size320"
    android:layout_height="@dimen/size80"
    android:id="@+id/rl_content"
    android:paddingLeft="@dimen/size20"
    android:paddingRight="@dimen/size10">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/size60"
        android:layout_height="@dimen/size60"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size10"
        android:scaleType="centerCrop"
        app:riv_corner_radius="14dp"
        app:riv_oval="false" />

    <com.tinytiger.titi.widget.view.DownloadProgressView
        android:id="@+id/dpvProgress"
        android:layout_width="@dimen/size60"
        android:layout_height="@dimen/size30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
       />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/dpvProgress"
        android:layout_toRightOf="@+id/ivLogo"
        android:lines="1"
        android:ellipsize="end"
        android:paddingTop="@dimen/size15"
        android:textColor="@color/gray33"
        android:textSize="@dimen/textSize16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/dpvProgress"
        android:layout_toRightOf="@+id/ivLogo"
        android:lines="1"
        android:textColor="@color/gray99"
        android:textSize="@dimen/textSize12" />

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ivLogo"
        android:background="@color/color_f2f2f2"
        android:paddingLeft="@dimen/size20"
        android:paddingRight="@dimen/size20" />
</RelativeLayout>