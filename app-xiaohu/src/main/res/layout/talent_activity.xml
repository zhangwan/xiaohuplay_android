<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.tinytiger.common.view.title.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showLine="gone" />

    <LinearLayout
        android:id="@+id/llApplication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size15"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_talent_bg"
            app:riv_border_width="0dip"
            app:riv_corner_radius="@dimen/size10"
            app:riv_oval="false" />

        <RelativeLayout
            android:id="@+id/rlContent1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size70"
            android:layout_marginTop="@dimen/size20"
            android:paddingLeft="@dimen/size15"
            android:paddingTop="@dimen/size15"
            android:paddingRight="@dimen/size15">

            <ImageView
                android:id="@+id/ivIcon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size15"
                android:src="@mipmap/icon_talent_p1" />

            <TextView
                android:id="@+id/tvName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivIcon1"

                android:text="站内达人认证"
                android:textColor="@color/gray33"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName1"
                android:layout_toRightOf="@+id/ivIcon1"
                android:paddingTop="@dimen/size6"
                android:text="在星球持续活跃并贡献内容的用户"
                android:textColor="@color/gray99"
                android:textSize="@dimen/textSize14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_forward_ccc" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginRight="@dimen/size15"
            android:background="@color/color_line" />

        <RelativeLayout
            android:id="@+id/rlContent2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size70"
            android:paddingLeft="@dimen/size15"
            android:paddingRight="@dimen/size15">

            <ImageView
                android:id="@+id/ivIcon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size15"
                android:src="@mipmap/icon_talent_p2" />

            <TextView
                android:id="@+id/tvName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivIcon2"
                android:paddingTop="@dimen/size10"
                android:text="站外达人认证"
                android:textColor="@color/gray33"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName2"
                android:layout_toRightOf="@+id/ivIcon2"
                android:paddingTop="@dimen/size6"
                android:text="在站外已经获得平台认证的用户"
                android:textColor="@color/gray99"
                android:textSize="@dimen/textSize14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_forward_ccc" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/size100">

        <ImageView
            android:id="@+id/ivEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@mipmap/icon_empty" />


        <LinearLayout
            android:id="@+id/llInfo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/empty_view_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/size50"
                android:text="达人认证审核中..."
                android:textColor="@color/gray33"
                android:textSize="@dimen/textSize18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核时间1~3个工作日"
                android:paddingTop="@dimen/size15"
                android:textColor="@color/gray99"
                android:textSize="@dimen/textSize14"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llInfo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size20"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivTalent"
                android:layout_width="@dimen/size45"
                android:layout_height="@dimen/size45"
                android:src="@mipmap/icon_talent_p1" />

            <TextView
                android:id="@+id/ivTalentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size5"
                android:text="站内达人"
                android:textColor="@color/gray33"
                android:textSize="@dimen/textSize18" />
            <TextView
                android:id="@+id/tvAddGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size20"
                android:text="达人认证已通过!"
                android:textColor="@color/color_0fb50a"
                android:textSize="@dimen/textSize18" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size30"
                android:src="@mipmap/icon_talent_gf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llInfo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size50"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size5"
                android:text="您的申请未通过"
                android:textColor="@color/gray33"
                android:textSize="@dimen/textSize18" />

            <TextView
                android:id="@+id/btn_complete"
                android:layout_width="@dimen/size160"
                android:layout_height="@dimen/size40"
                android:layout_marginTop="@dimen/size60"
                android:background="@drawable/solid_gradient_20_ffcc03"
                android:gravity="center"
                android:text="重新申请认证"
                android:textColor="@color/gray33"
                android:textSize="@dimen/textSize16"
                />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
