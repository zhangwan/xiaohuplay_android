<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size20"
    android:paddingTop="@dimen/size5"
    android:paddingBottom="@dimen/size10">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/size45"
        android:layout_height="@dimen/size45"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/size13"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:paddingRight="@dimen/size5"
        android:paddingTop="@dimen/size2"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="@dimen/size10"
        android:textColor="@color/gray28"
        android:textSize="@dimen/textSize14" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size2"
        android:layout_below="@+id/tv_title"
        android:paddingRight="@dimen/size5"
        android:layout_toRightOf="@+id/iv_avatar"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="@dimen/size10"
        android:textColor="@color/gray99"
        android:textSize="@dimen/textSize14" />

</RelativeLayout>



