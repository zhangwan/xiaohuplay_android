<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size85"
    android:background="@color/white"
    android:paddingTop="@dimen/size10"
    android:paddingRight="@dimen/size15">


    <TextView
        android:id="@+id/tv_score_num"
        android:layout_width="@dimen/size110"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0.0"
        android:textColor="@color/gray33"
        android:textSize="@dimen/textSize32"
        android:textStyle="bold" />

    <TextView
        android:layout_width="@dimen/size110"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_score_num"
        android:gravity="center"
        android:text="安利指数"
        android:textStyle="bold"
        android:textColor="@color/gray33"
        android:textSize="@dimen/textSize14" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rating_bar"
        style="@style/RadingStyle_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size12"
        android:layout_toRightOf="@+id/tv_score_num"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="0" />

    <TextView
        android:id="@+id/tv_score_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_bar"
        android:layout_toRightOf="@+id/tv_score_num"
        android:paddingTop="@dimen/size4"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/gray99"
        android:textSize="@dimen/textSize12" />

    <TextView
        android:id="@+id/tv_take_score"
        android:layout_width="@dimen/size85"
        android:layout_height="@dimen/size30"
        android:layout_alignParentRight="true"
        android:drawableLeft="@mipmap/icon_game_pen"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/size15"
        android:drawablePadding="@dimen/size5"
        android:layout_marginRight="@dimen/size15"
        android:background="@drawable/stroke_rectangle_16_ffcc03"
        android:gravity="center_vertical"
        android:text="评价"
        android:textColor="@color/color_ffcc03"
        android:textSize="@dimen/textSize14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:layout_marginLeft="@dimen/size15"
        android:layout_alignParentBottom="true"
        android:background="@color/color_bg" />
</RelativeLayout>