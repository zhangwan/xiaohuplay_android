<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size85"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size15"
    android:paddingRight="@dimen/size15"
    android:paddingBottom="@dimen/size15">


    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/solid_gradient_15_fcfbf9_f8f6f1">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size15"
            android:layout_marginEnd="@dimen/size15"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_avatar"
            android:paddingTop="@dimen/size10"
            android:text="@string/app_name"
            android:textColor="@color/gray33"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toEndOf="@+id/iv_avatar"
            android:paddingTop="@dimen/size5">

            <TextView
                android:id="@+id/tvCircleSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/gray66"
                android:textSize="@dimen/textSize16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人加入"
                android:textColor="@color/gray66"
                android:textSize="@dimen/textSize12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ "
                android:textColor="@color/gray66"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tvCircleNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/gray66"
                android:textSize="@dimen/textSize16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="条动态"
                android:textColor="@color/gray66"
                android:textSize="@dimen/textSize12" />

        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/size25"
            android:layout_height="@dimen/size25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size15"
            android:background="@drawable/solid_rectangle_30_faf1cd"
            android:scaleType="center"
            android:src="@mipmap/icon_right_y" />

    </RelativeLayout>


</FrameLayout>