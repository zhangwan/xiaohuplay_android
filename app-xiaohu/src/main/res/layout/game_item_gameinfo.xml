<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayF9"
    android:orientation="vertical"
    android:paddingTop="@dimen/size10"
    android:paddingBottom="@dimen/size10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/size15">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏信息"
            android:textColor="@color/gray33"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size15"
            android:background="@drawable/solid_rectangle_5_f7f7f7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/size10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前版本"
                        android:textColor="@color/gray33"
                        android:textSize="@dimen/textSize12" />

                    <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size6"
                        android:text=""
                        android:textColor="@color/gray8c"
                        android:textSize="@dimen/textSize10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/size10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游戏大小"
                        android:textColor="@color/gray33"
                        android:textSize="@dimen/textSize12" />

                    <TextView
                        android:id="@+id/tv_game_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size6"
                        android:text=""
                        android:textColor="@color/gray8c"
                        android:textSize="@dimen/textSize10" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/size10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更新时间"
                        android:textColor="@color/gray33"
                        android:textSize="@dimen/textSize12" />

                    <TextView
                        android:id="@+id/tv_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size6"
                        android:textColor="@color/gray8c"
                        android:textSize="@dimen/textSize10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_publisher"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/size5"
                    android:paddingRight="@dimen/size5"
                    android:paddingBottom="@dimen/size10">

                    <TextView
                        android:id="@+id/title_publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发行商"
                        android:textColor="@color/gray33"
                        android:textSize="@dimen/textSize12" />

                    <TextView
                        android:id="@+id/tv_publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size6"
                        android:textColor="@color/gray8c"
                        android:textSize="@dimen/textSize10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_developer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/size5"
                    android:paddingBottom="@dimen/size10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开发商"
                        android:textColor="@color/gray33"
                        android:textSize="@dimen/textSize12" />

                    <TextView
                        android:id="@+id/tv_developer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size6"
                        android:text=""
                        android:textColor="@color/gray8c"
                        android:textSize="@dimen/textSize10" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/size10" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>