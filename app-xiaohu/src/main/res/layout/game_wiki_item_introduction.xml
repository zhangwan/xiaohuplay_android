<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clipToPadding="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size40"
        android:paddingLeft="@dimen/size15"
        android:paddingTop="@dimen/size15">

        <ImageView
            android:layout_width="@dimen/size4"
            android:layout_height="@dimen/size18"
            android:layout_marginTop="@dimen/size2"
            android:background="@drawable/solid_rectangle_10_ffcc03_linear" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size5"
            android:textColor="@color/gray33"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold" />
    </LinearLayout>


    <com.tinytiger.common.view.indicator.WikiNavigatorView
        android:id="@+id/viewNavigator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:layout_marginLeft="@dimen/size15"
        android:layout_marginRight="@dimen/size15"
        android:background="@color/color_bg" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingLeft="@dimen/size15"
        android:paddingTop="@dimen/size16"
        android:paddingBottom="@dimen/size10"
        android:scrollbars="none" />

</LinearLayout>