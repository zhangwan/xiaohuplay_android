<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="emptyView" format="reference"/>
        <attr name="noNetworkView" format="reference"/>
        <attr name="contentView" format="reference"/>
    </declare-styleable>


    <!--1.中间的文字、2.是否显示右边的图标、3.右边图标-->
    <declare-styleable name="TitleView">
        <attr name="CenterText" format="reference|string" />
        <attr name="CenterTextSize" format="reference|float" />
        <attr name="CenterTextColor" format="color|reference" />
        <attr name="CenterBgColor" format="color|reference" />
        <attr name="showCenterText">
            <flag name="visible" value="0" />
            <flag name="gone" value="1" />
            <flag name="invisible" value="2" />
        </attr>
        <attr name="rightText" format="reference|string" />
        <attr name="rightTxtColor" format="color|reference" />
        <attr name="rightDownText" format="reference|string" />
        <attr name="showRightIcon">
            <flag name="visible" value="0" />
            <flag name="gone" value="1" />
            <flag name="invisible" value="2" />
        </attr>
        <attr name="showLine">
            <flag name="visible" value="0" />
            <flag name="gone" value="1" />
            <flag name="invisible" value="2" />
        </attr>

        <attr name="leftText" format="reference|string" />
        <attr name="leftDownText" format="reference|string" />
        <attr name="leftDownColor" format="color|reference" />
        <attr name="showLeftIcon">
            <flag name="visible" value="0" />
            <flag name="gone" value="1" />
            <flag name="invisible" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="AvatarView">
        <attr name="TalentSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BaseItemView">
        <attr name="image" format="reference" />
        <attr name="titleText" format="string|reference" />
        <attr name="subtitleText" format="string|reference" />
        <attr name="infoText" format="string|reference" />
    </declare-styleable>



<!--  Date picker -->
    <declare-styleable name="YearWheelView">
        <attr name="wv_startYear" format="integer" />
        <attr name="wv_endYear" format="integer" />
        <attr name="wv_selectedYear" format="integer" />
    </declare-styleable>

    <declare-styleable name="MonthWheelView">
        <attr name="wv_selectedMonth" format="integer" />
    </declare-styleable>

    <declare-styleable name="DayWheelView">
        <attr name="wv_year" format="integer" />
        <attr name="wv_month" format="integer" />
        <attr name="wv_selectedDay" format="integer" />
    </declare-styleable>


    <declare-styleable name="SwitchView">
        <attr name="hasShadow" format="boolean"/>
        <attr name="primaryColor" format="color"/>
        <attr name="primaryColorDark" format="color"/>
        <attr name="offColor" format="color"/>
        <attr name="offColorDark" format="color"/>
        <attr name="shadowColor" format="color"/>
        <attr name="ratioAspect" format="float"/>
        <attr name="isOpened" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="EasySwipeMenuLayout">
        <attr name="leftMenuView" format="reference" />
        <attr name="rightMenuView" format="reference" />
        <attr name="contentLayout" format="reference" />
        <attr name="canRightSwipe" format="boolean" />
        <attr name="canLeftSwipe" format="boolean" />
        <attr name="fraction" format="float" />
    </declare-styleable>


    <declare-styleable name="ShowAllTextView">
        <attr name="maxShowLines" format="integer" />
        <attr name="rightMenuText" format="string" />
        <attr name="viewClick" format="boolean" />
        <attr name="renewViewClick" format="boolean"/>
        <attr name="leftMargin" format="dimension"/>
        <attr name="rightMargin" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SoulPlanetsView">
        <attr name="autoScrollModeSoul">
            <enum name="disable" value="0" />
            <enum name="decelerate" value="1" />
            <enum name="uniform" value="2" />
        </attr>
        <attr name="manualScrollSoul" format="boolean" />
        <attr name="radiusPercentSoul" format="float" />
        <attr name="scrollSpeedSoul" format="float" />
        <attr name="lightColorSoul" format="color" />
        <attr name="darkColorSoul" format="color" />
        <attr name="startAngleXSoul" format="float" />
        <attr name="startAngleYSoul" format="float" />
    </declare-styleable>

    <declare-styleable name="RoundLayout">
        <attr name="attr_clip_background" format="boolean" />
        <attr name="attr_round_corner" format="dimension" />

    </declare-styleable>

    <declare-styleable name="CirclePercentView">
        <!--圆弧背景色-->
        <attr name="circleBgColor" format="reference" />
        <!--圆弧进度条颜色-->
        <attr name="circleProgressColor" format="reference" />
        <!--圆弧宽度-->
        <attr name="circleRadius" format="integer" />
        <!--渐变开始颜色-->
        <attr name="circleStartColor" format="reference" />
        <!--渐变结束颜色-->
        <attr name="circleEndColor" format="reference" />
        <!--是否渐变-->
        <attr name="circleIsGradient" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WaterMaskView">
        <!--栏背景色-->
        <attr name="title_background_color" format="color" />
        <!--左边按钮是否可见-->
        <attr name="left_button_visible" format="boolean" />
        <!--公司文字-->
        <attr name="company_text" format="string" />
        <!--公司文字颜色-->
        <attr name="title_text_color" format="color" />
        <!--logo文字-->
        <attr name="logo_button_text" format="string" />
        <!--左边按钮文字颜色-->
        <attr name="logo_button_text_color" format="color" />
        <!--左边按钮图标-->
        <attr name="logo_button_drawable" format="reference|integer" />
        <!--相关信息文字-->
        <attr name="info_text" format="string" />
        <!--相关信息文字颜色-->
        <attr name="info_text_color" format="color" />
        <!--右边按钮图标-->
        <attr name="right_button_drawable" format="reference|integer" />
    </declare-styleable>

</resources>