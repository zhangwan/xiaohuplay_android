<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size320"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_rectangle_10_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/size16">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size8"
        android:text="兑换数量"
        android:textColor="@color/gray33"
        android:textSize="@dimen/size16"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/size16">



        <TextView
            android:id="@+id/tv_sub"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="@dimen/size4"
            android:background="@drawable/solid_rectangle_e9e8e8"
            android:gravity="center"
            android:text="—"
            android:textColor="@color/gray33"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_num"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="@dimen/size4"
            android:background="@drawable/solid_rectangle_e9e8e8"
            android:gravity="center"
            android:text="0"
            android:minWidth="@dimen/size80"
            android:inputType="number"
            android:digits="@string/digits_0"
            android:paddingStart="@dimen/size10"
            android:paddingEnd="@dimen/size10"
            android:textColor="@color/gray33"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="@dimen/size4"
            android:background="@drawable/solid_rectangle_e9e8e8"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/gray33"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_privilege"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/size16"
        android:layout_marginEnd="@dimen/size16"
        android:background="@mipmap/icon_two_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/color_ffcc03"
            android:textSize="@dimen/textSize16"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_exchange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="兑换"
            android:gravity="center"
            android:textColor="@color/gray33"
            android:textSize="@dimen/textSize16"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>

