<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/size50"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line" />

    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/size35"
        android:layout_height="@dimen/size35"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size15"
        android:layout_marginRight="@dimen/size10" />


    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_head"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:paddingTop="@dimen/size6"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/gray28"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_msg_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/size4"
        android:layout_marginBottom="@dimen/size6"
        android:layout_toRightOf="@id/img_head"
        android:contentDescription="@string/empty"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/img_msg_status"
        android:autoLink="none"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingRight="@dimen/size40"
        android:paddingBottom="@dimen/size6"
        android:scrollHorizontally="true"
        android:text="@string/app_name"
        android:textColor="@color/gray99"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size15"
        android:paddingTop="@dimen/size6"
        android:textColor="@color/color_aaaaaa_content_text"
        android:textSize="@dimen/textSize10" />

    <com.netease.nim.uikit.common.ui.drop.DropFake
        android:id="@+id/unread_number_tip"
        android:layout_width="@dimen/size15"
        android:layout_height="@dimen/size15"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/size15"
        android:layout_marginBottom="@dimen/size6"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize9"
        android:visibility="invisible" />

</RelativeLayout>
