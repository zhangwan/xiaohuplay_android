<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size16">


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/size100"
            android:layout_height="@dimen/size75"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:src="@color/white" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/size20"
            android:layout_height="@dimen/size20"
            android:layout_alignStart="@id/iv_image"
            android:layout_alignEnd="@id/iv_image"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_news_start" />


        <TextView
            android:id="@+id/tv_title"
            style="@style/TextMainType"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/iv_image"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_info_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_image"
            android:ellipsize="end"
            android:maxLength="12"
            android:text="@string/send"
            android:textColor="@color/gray99"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_info_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_info_0"
            android:layout_marginStart="@dimen/size16"
            android:layout_toEndOf="@+id/tv_info_0"
            android:drawableStart="@mipmap/icon_read_small"
            android:drawablePadding="@dimen/size4"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/gray99"
            android:textSize="@dimen/textSize12" />


    </RelativeLayout>

    <View
        style="@style/DividerType"
        android:layout_marginStart="@dimen/size16"
        android:layout_marginEnd="@dimen/size16" />
</LinearLayout>