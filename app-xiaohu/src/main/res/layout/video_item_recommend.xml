<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/size110"
        android:layout_height="@dimen/size64"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/size10"
        android:scaleType="centerCrop"
        android:src="@color/white" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/iv_image"
        android:layout_alignBottom="@id/iv_image"
        android:layout_margin="@dimen/size4"
        android:background="@drawable/solid_rectangle_80000000"
        android:padding="@dimen/size2"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize10"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_title"
        style="@style/TextMainType"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/iv_image"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        android:paddingStart="@dimen/size16"
        android:paddingTop="@dimen/textSize10"
        android:paddingEnd="@dimen/size16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextInfoType"
        android:layout_alignBottom="@id/iv_image"
        android:layout_marginStart="@dimen/size16"
        android:padding="@dimen/size2" />


    <TextView
        android:id="@+id/tv_read_num"
        style="@style/TextInfoType"
        android:layout_alignBottom="@id/iv_image"
        android:layout_marginStart="@dimen/size10"
        android:layout_toEndOf="@id/tv_name"
        android:drawableStart="@mipmap/icon_read"
        android:drawablePadding="@dimen/size2"
        android:padding="@dimen/size2"

        />


</RelativeLayout>