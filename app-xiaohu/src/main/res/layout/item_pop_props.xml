<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/icon_popup"
    android:gravity="center"
    android:paddingStart="@dimen/size16"
    android:paddingEnd="@dimen/size16"
    android:paddingTop="@dimen/size6"
    android:paddingBottom="@dimen/size8"
    android:orientation="vertical">




    <TextView
        android:id="@+id/tv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size8"
        android:drawableLeft="@mipmap/icon_props_share"
        android:drawablePadding="@dimen/size10"
        android:padding="@dimen/size8"
        android:gravity="center_vertical"
        android:text="分享"
        android:textColor="@color/gray33"
        android:textSize="@dimen/textSize14" />

    <View
        android:id="@+id/line"
        android:layout_width="@dimen/size100"
        android:layout_height="1px"
        android:visibility="gone"
        android:background="@color/color_line"/>

    <TextView
        android:id="@+id/tv_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:drawableLeft="@mipmap/icon_props_exchange"
        android:drawablePadding="@dimen/size10"
        android:padding="@dimen/size8"
        android:gravity="center_vertical"
        android:text="道具兑换"
        android:textColor="@color/gray33"
        android:textSize="@dimen/textSize14" />

</LinearLayout>

