<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlInfo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size115"
    android:paddingLeft="@dimen/size15"
    android:paddingTop="@dimen/size15"
    android:paddingRight="@dimen/size15">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ivIcon"
        android:ellipsize="end"
        android:lines="2"
        android:textStyle="bold"
        android:paddingRight="@dimen/size5"
        android:text="@string/app_name"
        android:textColor="@color/gray33"
        android:textSize="@dimen/textSize15" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/size100"
        android:layout_height="@dimen/size75"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:riv_border_width="0dip"
        app:riv_corner_radius="@dimen/size6"
        app:riv_oval="false" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/size20"
        android:text="@string/app_name"
        android:textColor="@color/gray99"
        android:textSize="@dimen/textSize12" />

    <TextView
        android:id="@+id/tvWatchSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/size10"
        android:gravity="center_vertical"
        android:layout_alignBaseline="@+id/tvName"
        android:layout_toRightOf="@+id/tvName"
        android:drawableLeft="@mipmap/icon_read_1"
        android:drawablePadding="@dimen/size5"
        android:text="0"
        android:textColor="@color/gray99"
        android:textSize="@dimen/textSize12" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line2" />
</RelativeLayout>