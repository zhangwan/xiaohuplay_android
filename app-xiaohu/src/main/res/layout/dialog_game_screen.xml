<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_rectangle_10_white"
    android:gravity="center_horizontal"
    android:minWidth="@dimen/size300"
    android:orientation="vertical"
    android:padding="@dimen/size16">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size2"
        android:text="星级选择 (可多选)"
        android:textColor="@color/gray28"
        android:textSize="@dimen/textSize16"
      />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size16"
        android:weightSum="5"
      >


            <CheckBox
                android:id="@+id/star_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="33dp"
                android:layout_margin="@dimen/size2"
                android:text="五星"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/gray77"
                android:textSize="@dimen/textSize14"
                android:background="@drawable/game_icon_button_selector"
              />
            <CheckBox
                android:id="@+id/star_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="33dp"
                android:layout_margin="@dimen/size2"
                android:text="四星"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/gray77"
                android:textSize="@dimen/textSize14"
                android:background="@drawable/game_icon_button_selector"
                />
            <CheckBox
                android:id="@+id/star_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="33dp"
                android:layout_margin="@dimen/size2"
                android:text="三星"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/gray77"
                android:textSize="@dimen/textSize14"
                android:background="@drawable/game_icon_button_selector"
                />
            <CheckBox
                android:id="@+id/star_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="33dp"
                android:layout_margin="@dimen/size2"
                android:text="两星"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/gray77"
                android:textSize="@dimen/textSize14"
                android:background="@drawable/game_icon_button_selector"
                />
            <CheckBox
                android:id="@+id/star_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="33dp"
                android:layout_margin="@dimen/size2"
                android:text="一星"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/gray77"
                android:textSize="@dimen/textSize14"
                android:background="@drawable/game_icon_button_selector"
                />




    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size30"
        android:layout_marginStart="@dimen/size4"
        android:layout_marginEnd="@dimen/size4"
        android:minWidth="@dimen/size300">



        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/solid_rectangle_16_ffcc03_linear"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/gray28"
            android:textSize="@dimen/textSize16" />



    </RelativeLayout>
</LinearLayout>

