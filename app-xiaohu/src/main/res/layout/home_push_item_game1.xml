<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_content"
    android:layout_width="@dimen/size300"
    android:layout_height="@dimen/size115"
    android:paddingLeft="@dimen/size20">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/size85"
        android:layout_height="@dimen/size85"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size15"
        android:scaleType="centerCrop"
        app:riv_corner_radius="20dp"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivLogo"
        android:ellipsize="end"
        android:lines="1"
        android:paddingTop="@dimen/size15"
        android:textColor="@color/gray33"
        android:textSize="@dimen/textSize16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@+id/ivLogo"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/gray99"
        android:textSize="@dimen/textSize12" />

    <RelativeLayout
        android:layout_width="@dimen/size120"
        android:layout_height="@dimen/size30"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size15"
        android:layout_toRightOf="@+id/ivLogo">

        <com.tinytiger.titi.widget.view.DownloadProgressView
            android:id="@+id/dpvProgress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size30" />

        <TextView
            android:id="@+id/tvYunGame"
            android:layout_width="@dimen/size60"
            android:layout_height="@dimen/size30"
            android:gravity="center"
            android:text="秒玩"
            android:textColor="@color/gray33"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold" />

        <View
            android:id="@+id/tvLine"
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="59dp"
            android:background="@color/color_line"
            android:gravity="center_vertical" />
    </RelativeLayout>


    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ivLogo"
        android:background="@color/color_f2f2f2"
        android:paddingLeft="@dimen/size20"
        android:paddingRight="@dimen/size20" />
</RelativeLayout>