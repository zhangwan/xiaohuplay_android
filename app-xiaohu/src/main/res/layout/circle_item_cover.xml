<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlInfo"
    android:layout_width="@dimen/size150"
    android:layout_height="@dimen/size110"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size5"
    android:paddingTop="@dimen/size15">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/size140"
        android:layout_height="@dimen/size80"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:riv_border_width="0dip"
        app:riv_corner_radius="@dimen/size10"
        app:riv_oval="false" />

    <ImageView
        android:layout_width="@dimen/size140"
        android:layout_height="@dimen/size80"
        android:layout_gravity="center"
        android:background="@drawable/solid_rectangle_10_33000000" />
<!--
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize14" />-->
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="@dimen/size15"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLength="8"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="#"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_content"
        android:layout_centerHorizontal="true"
        android:drawableRight="@mipmap/icon_circle_red"
        android:drawablePadding="@dimen/size5"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/size10"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize14"
        android:textStyle="bold" />

</RelativeLayout>